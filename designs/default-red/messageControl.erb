<%# -*- encoding : utf-8 -*- %>
<!DOCTYPE html>
<html>
    <head>
        <%= erb :head %>
        <title><%= blogTitle%> - Messages</title>
        <meta name="description" content="">
    </head>
    <body>
        
        <%= erb :navigation %>
        
        <div id="content">
            <%= erb :header, :locals => {:blogTitle => blogTitle} %>
            <h2>Messages</h2>

            <ol id="messengers">
            <% messengers.each do |messenger| %>
                <li><button class="messenger" data-name="<%= messenger.name %>"><%= messenger.name %></button></li>
            <% end %>
            </ol>

            <section id="messages">
                
                <form id="messageEditor" action="addMessage" method="post">
                    <input type="hidden" name="to" id="to" />
                    <textarea name="content" placeholder="Message" required></textarea>
                    <button type="submit"><span>Send</span></button>
                </form>
            </section> 
        </div>
    </body>
</html>