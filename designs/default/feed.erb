<%# -*- encoding : utf-8 -*- %>
<?xml version="1.0" encoding="utf-8" ?>
<rss version="2.0"
    xmlns:atom="http://www.w3.org/2005/Atom"
    xmlns:content="http://purl.org/rss/1.0/modules/content/"
   >
    <channel>
        <title><%= blogTitle %></title>
        <link><%= url_for '/', :full %></link>
        <description></description>
        <generator>dsnblog</generator>
        <atom:link href="<%= url_for '/feed', :full %>" rel="self" type="application/rss+xml" />
        <atom:link rel="hub" href="https://pubsubhubbub.superfeedr.com/" />
        <% entries.each do |entry| %>
            <item>
                <title><%= entry.title %></title>
                <link><%= url_for entry.link, :full%></link>
                <comments><%= url_for entry.link, :full %>#comments</comments>   
                <% if ! entry.body.empty? %>
                    <content:encoded>
                        <%= h entry.format %>
                    </content:encoded>
                <% end %>
                <guid isPermaLink="true"><%= url_for '/', :full %>_<%= entry.id %></guid>
                <pubDate><%= Time.parse(entry.date).rfc2822 %></pubDate>
            </item>
        <% end %>
    </channel>
</rss>
