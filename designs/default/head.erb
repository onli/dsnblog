<% end %>
<link rel="alternate"  type="application/rss+xml" href="<%= url_for '/commentFeed' %>" title="<%= blogTitle %> Comment Feed">
<script>
paceOptions = {
  startOnPageLoad: false
}
</script>
<script src="<%= url_for '/js/main.js' %>" defer></script>
