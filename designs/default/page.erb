<%# -*- encoding : utf-8 -*- %>
<!DOCTYPE html>
<html>
    <head>
        <%= erb :head, :locals => {:tag => nil} %>
        <title><%= entry.title %> - <%= blogTitle %></title>
        <meta name="description" content="">
        <link rel="trackback" type="application/x-www-form-urlencoded" href="http://<%= request.host_with_port %>/<%= entry.id %>/addTrackback" />
        <link rel="pingback" href="http://<%= request.host_with_port %>/xmlrpc" />
    </head>

    <body>
        <div id="content">
            <%= erb :header, :locals => {:blogTitle => blogTitle} %>

            <article class="entry container" itemscope itemtype="http://schema.org/BlogPosting">
                <%= erb :entry, :locals => {:entry => entry} %>

                <!--
                <rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
                         xmlns:trackback="http://madskills.com/public/xml/rss/module/trackback/"
                         xmlns:dc="http://purl.org/dc/elements/1.1/">
                <rdf:Description
                         trackback:ping="http://<%= request.host_with_port %>/<%= entry.id %>/addTrackback"
                         dc:title="<%= entry.title %>"
                         dc:identifier="http://<%= request.host_with_port %>/<%= entry.id %>/<%= h entry.title %>" />
                </rdf:RDF>
                -->

                 <% if isAdmin? %>
                    <form id="entryModerationToggle" action="/<%= entry.id %>/setEntryModeration" method="POST" >
                        
                        <div>
                        <span>Comments are:</span>
                        <input class="moderationStatus" type="radio" name="moderationStatus" id="moderationStatusOpen" value="open" <%= 'checked="checked"' if entry.moderate == "open" %> />
                        <label class="moderationStatusLabel" for="moderationStatusOpen">Open</label>
                        <input class="moderationStatus" type="radio" name="moderationStatus" id="moderationStatusModerated" value="moderated" <%= 'checked="checked"' if entry.moderate == "moderated" %> />
                        <label class="moderationStatusLabel" for="moderationStatusModerated">Moderated</label>
                        <input class="moderationStatus" type="radio" name="moderationStatus" id="moderationStatusClosed" value="closed" <%= 'checked="checked"' if entry.moderate == "closed" %> />
                        <label class="moderationStatusLabel" for="moderationStatusClosed">Closed</label>
                        <button type="submit">OK</button>
                        </div>
                    </form>
                <% end %>

                <ol id="comments">
                     <% comments.each do |comment| %>
                        <% if comment.status == "approved" %>
                            <li>
                                <%= erb :comment, :locals => {:comment => comment} %>
                            </li>
                        <% else %>
                            <% if isAdmin? %>
                                <li class="comment_moderate">
                                    <%= erb :comment, :locals => {:comment => comment} %>
                                </li>
                            <% end %>
                        <% end %>
                    <% end %>
                </ol>
            </article>

            <% if entry.moderate != "closed" %>
                <%= erb :commentForm, :locals => {:entry => entry, :comment => nil} %>
            <% end %>
        <div id="content">

    </body>
</html>